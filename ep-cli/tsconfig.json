{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "strict": true,
      "noImplicitOverride": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "declaration": false,
    },
    "include": ["src"]
  }